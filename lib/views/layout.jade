doctype html
html
  head
    title= 'Conbase Node Demo'
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='http://fb.me/react-0.12.2.js')
    script(src='/js/all.min.js')
    script(type="text/javascript", src='/js/cb_objects.js')
    script(type="text/javascript", src='/js/cb_actions.js')

  body
    table
        -var notLoggedIn
        if loggedIn
          -notLoggedIn = false 
        else
          -notLoggedIn = true 
        td
          form(name="login", action="/login", method="get")
            input(
              disabled=loggedIn, 
              type="submit", value="login", title='Login at Coinbase')
        td
          button(disabled=notLoggedIn, onClick=('logout()'), title='Logout')
            span.glyphicon.glyphicon-log-out(aria-hidden='true')
            span.sr-only Logout:
        td
          button(disabled=notLoggedIn, onClick=('refresh()'), title='Refresh OAuth2 Login')
            span.glyphicon.glyphicon-refresh(aria-hidden='true')
            span.sr-only RefreshLogin:
        td
          div(id="debugDiv")

    .page-header
      h1
        | Welcome to My Demo
        p.small example usage of coinbase-node

    block content

